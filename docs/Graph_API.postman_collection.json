{
    "info": {
        "name": "cryptomart Graph API - USD Accounts",
        "_postman_id": "cryptomart-graph-api-collection",
        "description": "Complete Graph API integration for USD account creation, deposits, and withdrawals",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_AUTH_TOKEN_HERE",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Customer & Wallet Setup",
            "item": [
                {
                    "name": "Create Graph Customer",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"dob\": \"1990-01-15\",\n  \"address\": \"123 Main Street\",\n  \"city\": \"Lagos\",\n  \"state\": \"Lagos\",\n  \"zip_code\": \"100001\",\n  \"id_number\": \"12345678901\",\n  \"id_type\": \"NIN\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/user/graph/create-customer",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "user",
                                "graph",
                                "create-customer"
                            ]
                        }
                    }
                },
