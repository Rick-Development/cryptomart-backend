{
    "info": {
        "name": "SafeHaven API",
        "_postman_id": "safehaven-api-collection",
        "description": "API endpoints for SafeHaven integration",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get Sub-Account",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/user/safehaven/sub-account",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "user",
                        "safehaven",
                        "sub-account"
                    ]
                },
                "description": "Get or create SafeHaven NGN fixed sub-account"
            },
            "response": []
        },
        {
            "name": "Name Enquiry",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"bank_code\": \"058\",\n  \"account_number\": \"0123456789\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/user/safehaven/name-enquiry",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "user",
                        "safehaven",
                        "name-enquiry"
                    ]
                },
                "description": "Verify external bank account details"
            },
            "response": []
        },
        {
            "name": "Transfer (Withdraw NGN)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"amount\": 5000,\n  \"bank_code\": \"058\",\n  \"account_number\": \"0123456789\",\n  \"narration\": \"Withdrawal\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/user/safehaven/transfer",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "user",
                        "safehaven",
                        "transfer"
                    ]
                },
                "description": "Initiate NGN transfer to external bank account"
            },
            "response": []
        },
        {
            "name": "Simulate Settlement Webhook",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"account_number\": \"0123456789\",\n  \"amount\": 10000,\n  \"session_id\": \"test-session-123\",\n  \"status\": \"Success\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/webhook/safehaven",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "webhook",
                        "safehaven"
                    ]
                },
                "description": "Simulate inbound SafeHaven settlement (funds NGN wallet)"
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000",
            "type": "string"
        },
        {
            "key": "access_token",
            "value": "",
            "type": "string"
        }
    ]
}