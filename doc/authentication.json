{
	"info": {
		"name": "Auth API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Register User",
			"request": {
				"method": "POST",
				"header": [ { "key": "Accept", "value": "application/json" } ],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"firstname\": \"John\",\n    \"lastname\": \"Doe\",\n    \"email\": \"john@example.com\",\n    \"mobile\": \"1234567890\",\n    \"country\": \"United States\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"agree\": \"on\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/api/register",
					"host": ["{{base_url}}"],
					"path": ["api", "register"]
				}
			}
		},
		{
			"name": "Login User",
			"request": {
				"method": "POST",
				"header": [ { "key": "Accept", "value": "application/json" } ],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"john@example.com\",\n    \"password\": \"password123\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/api/login",
					"host": ["{{base_url}}"],
					"path": ["api", "login"]
				}
			}
		},
		{
			"name": "Biometric Register",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Accept", "value": "application/json" },
					{ "key": "Authorization", "value": "Bearer {{token}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"credential_id\": \"cred_12345\",\n    \"public_key\": \"ssh-rsa AAAA...\",\n    \"device_name\": \"iPhone 13\",\n    \"device_id\": \"uuid-1234-5678\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/api/auth/biometric/register",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "biometric", "register"]
				}
			}
		},
		{
			"name": "Biometric Login",
			"request": {
				"method": "POST",
				"header": [ { "key": "Accept", "value": "application/json" } ],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"credential_id\": \"cred_12345\",\n    \"signature\": \"base64_sig...\",\n    \"payload\": \"random_nonce_timestamp\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/api/auth/biometric/login",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "biometric", "login"]
				}
			}
		}
	]
}
