{
    "info": {
        "name": "P2P Feedback API",
        "description": "Feedback and rating system for P2P marketplace",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Submit Feedback",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"rating\": 5,\n    \"comment\": \"Excellent trade, very fast!\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/user/p2p/orders/1/feedback",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "user",
                        "p2p",
                        "orders",
                        "1",
                        "feedback"
                    ]
                },
                "description": "Submit rating (1-5) and comment for a completed order"
            }
        },
        {
            "name": "Get My Feedback",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/user/p2p/feedback",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "user",
                        "p2p",
                        "feedback"
                    ]
                },
                "description": "Get feedback received by the authenticated user"
            }
        },
        {
            "name": "Get User Feedback",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/user/p2p/feedback/5",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "user",
                        "p2p",
                        "feedback",
                        "5"
                    ]
                },
                "description": "Get feedback received by a specific user"
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_ACCESS_TOKEN_HERE",
            "type": "string"
        }
    ]
}