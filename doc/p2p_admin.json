{
    "info": {
        "name": "P2P Admin API",
        "description": "Admin management for P2P Marketplace (Ads, Disputes, Risk)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Ads",
            "item": [
                {
                    "name": "List Ads",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/admin/p2p/ads",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "p2p",
                                "ads"
                            ]
                        }
                    }
                },
                {
                    "name": "Approve/Reject Ad",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"status\": \"offline\",\n    \"reject_reason\": \"Invalid terms\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/admin/p2p/ads/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "p2p",
                                "ads",
                                "1"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Disputes",
            "item": [
                {
                    "name": "List Disputes",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/admin/p2p/disputes",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "p2p",
                                "disputes"
                            ]
                        }
                    }
                },
                {
                    "name": "Resolve Dispute",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"resolution\": \"release_to_buyer\",\n    \"reason\": \"Proof validation confirmed\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/admin/p2p/disputes/1/resolve",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "p2p",
                                "disputes",
                                "1",
                                "resolve"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Risk Scroring",
            "item": [
                {
                    "name": "List High Risk Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/admin/p2p/risk/users?level=high",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "p2p",
                                "risk",
                                "users"
                            ],
                            "query": [
                                {
                                    "key": "level",
                                    "value": "high"
                                },
                                {
                                    "key": "min_score",
                                    "value": "50",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Recalculate User Risk",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/admin/p2p/risk/users/1/recalculate",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "p2p",
                                "risk",
                                "users",
                                "1",
                                "recalculate"
                            ]
                        }
                    }
                },
                {
                    "name": "Flag User (Restrict)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/admin/p2p/risk/users/1/flag",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "p2p",
                                "risk",
                                "users",
                                "1",
                                "flag"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000",
            "type": "string"
        },
        {
            "key": "admin_token",
            "value": "YOUR_ADMIN_TOKEN",
            "type": "string"
        }
    ]
}